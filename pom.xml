<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
   <modelVersion>4.0.0</modelVersion>
   <parent>
      <groupId>org.springframework.boot</groupId>
      <artifactId>spring-boot-starter-parent</artifactId>
      <version>1.2.7.RELEASE</version>
   </parent>

   <groupId>com.bosch.hawkbit</groupId>
   <artifactId>hawkbit-test-app</artifactId>
   <version>0.0.1-SNAPSHOT</version>


   <properties>
      <hawkbit.version>0-SNAPSHOT</hawkbit.version>
   </properties>


   <build>
      <plugins>
         <plugin>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-maven-plugin</artifactId>
         </plugin>
      </plugins>
   </build>

   <dependencies>
      <!-- Hawkbit -->
      <dependency>
         <groupId>com.bosch.sp</groupId>
         <artifactId>hawkbit-autoconfigure</artifactId>
         <version>${hawkbit.version}</version>
      </dependency>
      <dependency>
         <groupId>com.bosch.sp</groupId>
         <artifactId>sp-amqp</artifactId>
         <version>${hawkbit.version}</version>
      </dependency>
      <dependency>
         <groupId>com.bosch.sp</groupId>
         <artifactId>sp-webapp</artifactId>
         <version>${hawkbit.version}</version>
      </dependency>
      <dependency>
         <groupId>com.bosch.sp</groupId>
         <artifactId>sp-security-integration</artifactId>
         <version>${hawkbit.version}</version>
      </dependency>
      <dependency>
         <groupId>com.bosch.sp</groupId>
         <artifactId>sp-http-security</artifactId>
         <version>${hawkbit.version}</version>
      </dependency>


      <!-- Spring -->
      <dependency>
         <groupId>org.springframework.boot</groupId>
         <artifactId>spring-boot-starter-web</artifactId>
      </dependency>
      <dependency>
         <groupId>org.springframework.security</groupId>
         <artifactId>spring-security-aspects</artifactId>
      </dependency>
      <dependency>
         <groupId>io.springfox</groupId>
         <artifactId>springfox-swagger2</artifactId>
         <version>2.0.3</version>
      </dependency>
      <dependency>
         <groupId>com.h2database</groupId>
         <artifactId>h2</artifactId>
      </dependency>
   </dependencies>

</project>